<% if (!username) { %>
  <form action="/login" method="POST" style="margin:20px;">
    <input id="username" type="text" name="username" placeholder="Username"style="width: 180px">
    <input id="password" type="password" name="password" placeholder="Password" style="width: 180px">
    <input type="submit" value="Sign In">
  </form>
<% } else { %>
  <table>
    <tr>
      <td><h2>Hello, <%= username %></h2></td>
      <td><form action="/logout" method="POST" style="margin:20px;">
          <input type="submit" value="Sign Out">
      </form></td>
    </tr>
  </table>
<% } %>